# Database
DB__HOST=postgres
DB__PORT=5432
DB__NAME=semantic_search
DB__USER=postgres
DB__PASSWORD=postgres

# Security
SECURITY__JWT_SECRET_KEY=your-secret-key-here-change-this-in-production
SECURITY__JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
SECURITY__JWT_REFRESH_TOKEN_EXPIRE_DAYS=3

# Ollama
OLLAMA__HOST=http://ollama:11434
OLLAMA__MODEL=nomic-embed-text
OLLAMA__TIMEOUT=60

# Milvus
MILVUS__HOST=milvus
MILVUS__PORT=19530
MILVUS__COLLECTION_NAME=document_embeddings

# Document processing
DOCUMENT__CHUNK_SIZE=1000
DOCUMENT__CHUNK_OVERLAP=200
DOCUMENT__MAX_FILE_SIZE_MB=50

# App
APP__DEBUG=True
APP__LOG_LEVEL=INFO
